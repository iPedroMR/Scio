<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IBM - Coleta 3"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="26sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aplicativo criado por Pedro Rezende do grupo Scio para auxiliar na coleta 3 do challange da FIAP."
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="13sp"
        android:textColor="@android:color/darker_gray"/>

    <Spinner
        android:id="@+id/spinner_intencao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/round_background"
        android:padding="6dp"/>

    <TextView
        android:id="@+id/et_sentenca"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="SentenÃ§as..."
        android:layout_weight="1"
        android:padding="20dp"
        android:fontFamily="@font/poppinsmedium"
        android:scrollbars="vertical"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/round_background"
        android:layout_marginTop="16dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_background"
        android:backgroundTint="#000000"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppinsmedium"
        android:onClick="btnFormatar"
        android:text="Formatar"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnColetar"
        android:fontFamily="@font/poppinsmedium"
        android:textAllCaps="false"
        android:background="@drawable/round_background"
        android:backgroundTint="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"
        android:text="Efetuar Coleta"/>


</LinearLayout>